- javascript 'endless_page'

%div
  - if @blog.pages.any?
    .right_column{style:'margin-top: 40px;'}
      - for page in @blog.scoped_pages({:is_draft => draft_mode})
        = render :partial => 'pages/page_intro', :locals => { :page => page }
        %p.content_seperator

  = raw("<div class='left_column'>" )if @blog.pages.any?

  = render :partial => '/blogs/blog', :locals => { :blog => @blog}

  %p= link_to( t(:create_new_posting), new_blog_posting_path(@blog), :class => :green_button ) if can? :create, Posting

  %p{style: 'text-align: center;'}= will_paginate @postings

  #postings{ style: 'clear: right;'}
    - @postings.each do |posting|
      = render :partial => '/blogs/posting_header', :locals => { :posting => posting, :blog => @blog }
    = render :partial => '/home/load_more', :locals => { :resources => @postings, :path => blog_path(@blog) }

  %p{style: 'text-align: center;'}= will_paginate @postings

  = raw("</div><div style='clear: both'></div>") if @blog.pages.any?
